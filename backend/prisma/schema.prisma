generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model TransactionItem {
  id              String   @id @default(cuid())
  name            String
  amount          Float
  createdAt       DateTime @default(now())
  transactionDate String
  userId          String
  type            String // "expense" | "profit" | Card.name
  category        String?
  frequency       String   @default("variable") // "fixed" | "variable"
}

model Card {
  id             String   @id @default(cuid())
  name           String
  limit          Float
  available      Float
  userId         String
  color          String   @default("#FFF")
  expirationDate DateTime @default(now())
  isPaid         Boolean  @default(false)
}
